# Fleet Monitor - Переменные окружения

# ===== АВТОРИЗАЦИЯ =====
NUXT_AUTH_SECRET=your-super-secret-key-change-in-production-min-32-chars

# ===== MQTT НАСТРОЙКИ =====
# URL MQTT брокера для WebSocket подключений
NUXT_PUBLIC_MQTT_URL=wss://test.mosquitto.org:8081

# Логин и пароль для MQTT (если требуется)
NUXT_PUBLIC_MQTT_USERNAME=
NUXT_PUBLIC_MQTT_PASSWORD=

# Топик по умолчанию для получения телеметрии
NUXT_PUBLIC_MQTT_TOPIC=vehicles/+/telemetry

# ===== СЕРВЕР =====
# Порт для Fastify сервера
PORT=3001

# Хост для сервера (0.0.0.0 для всех интерфейсов)
HOST=0.0.0.0

# Режим разработки (development/production)
NODE_ENV=development

# ===== БАЗА ДАННЫХ (опционально) =====
# PostgreSQL URL для Prisma
DATABASE_URL=postgresql://username:password@localhost:5432/fleet_monitor

# ===== КАРТЫ =====
# Mapbox API ключ (опционально, для дополнительных стилей карт)
NUXT_PUBLIC_MAPBOX_API_KEY=

# ===== ЛОГИРОВАНИЕ =====
# Уровень логирования (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# ===== БЕЗОПАСНОСТЬ =====
# Разрешенные домены для CORS (через запятую)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ =====
# Интервал обновления данных (в миллисекундах)
UPDATE_INTERVAL=5000

# Максимальное количество подключенных клиентов
MAX_CONNECTIONS=100 